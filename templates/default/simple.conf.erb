# Generated by Chef for <%= node["fqdn"] %>
server {
  listen 0.0.0.0:80;
  server_name <%= @domains.join(" ") %>;

  root <%= @root %>;
  index <%= @index.join(" ") %>;

  <% if @onlywww %>
    if ($http_host != "<%= @domains.last %>") {
      rewrite ^ http://<%= @domains.last %>$request_uri permanent;
    }
  <% end %>

  <% if @nowww %>
    if ($http_host != "<%= @domains.last %>") {
      rewrite ^ http://<%= @domains.last %>$request_uri permanent;
    }
  <% end %>

  location / {

  }

  location = /clear.gif {
    empty_gif;
    expires max;
  }

  location = /favicon.ico {
    allow all;
    log_not_found off;
    access_log off;
  }

  location = /robots.txt {
    allow all;
    log_not_found off;
    access_log off;
  }

  location = /404.html {
    root <%= node["nginx"]["web_dir"] %>;
  }

  location = /50x.html {
    root <%= node["nginx"]["web_dir"] %>;
  }

  error_page 404 /404.html;
  error_page 500 /50x.html;
  error_page 502 /50x.html;
  error_page 503 /50x.html;
  error_page 504 /50x.html;

  location ~ [^/]\.php(/|$) {
    fastcgi_split_path_info ^(.+?\.php)(/.*)$;

    if (!-f $document_root$fastcgi_script_name) {
      return 404;
    }

    fastcgi_pass unix:<%= node["php"]["run_dir"] %>/<%= @owner %>.socket;
    fastcgi_index index.php;

    include <%= node["nginx"]["config_dir"] %>/fastcgi.params;
  }
}
