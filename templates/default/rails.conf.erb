# Generated by Chef for <%= node["fqdn"] %>
upstream <%= @name %> {
  server 127.0.0.1:3000;
}

server {
  listen 0.0.0.0:80;
  server_name <%= @domains.join(" ") %>;

  root <%= @root %>/public;
  index <%= @index.join(" ") %>;

  <% if @onlywww -%>
    if ($http_host != "<%= @domains.last %>") {
      rewrite ^ http://<%= @domains.last %>$request_uri permanent;
    }
  <% end -%>

  <% if @nowww -%>
    if ($http_host != "<%= @domains.last %>") {
      rewrite ^ http://<%= @domains.last %>$request_uri permanent;
    }
  <% end -%>

  location / {
    try_files $uri @app;
  }

  location = /clear.gif {
    empty_gif;
    expires max;
  }

  location = /favicon.ico {
    allow all;
    log_not_found off;
    access_log off;
  }

  location = /robots.txt {
    allow all;
    log_not_found off;
    access_log off;
  }

  location = /404.html {
    root <%= node["nginx"]["web_dir"] %>;
  }

  location = /50x.html {
    root <%= node["nginx"]["web_dir"] %>;
  }

  error_page 404 /404.html;
  error_page 500 /50x.html;
  error_page 502 /50x.html;
  error_page 503 /50x.html;
  error_page 504 /50x.html;

  location @app {
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header Host $http_host;
    proxy_redirect off;

    proxy_pass http://<%= @name %>;
  }
}
